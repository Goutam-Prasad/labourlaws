<%-include('layout/boilerplate.ejs') %>
<form action="/bonusinput" method="POST">
  <div class="mb-3" style="width: 20%">
    <label for="basicSalary" class="form-label">Enter Basic Salary</label>
    <input
      type="text"
      class="form-control"
      id="basicSalary"
      name="basicSalary"
      aria-describedby="basicSalary"
      required
    />
  </div>
  <button class="btn btn-success">Submit</button>
</form>

<a href="/"><button class="btn btn-danger">Back</button></a>

<div>
  <%if(locals.bonusData){%>
  <div>Output</div>
  <div><p>Bonus is <%-bonusData%></p></div>
  <%}%>
</div>
